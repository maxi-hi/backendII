<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Carrito</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Create New Cart</h2>
                <form id="createCartForm" class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-cart-plus me-2"></i>Create Cart
                    </button>
                </form>
                <div id="message" class="alert mt-4 d-none"></div>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('createCartForm').addEventListener('submit', async (event) => {
    event.preventDefault();
    const messageDiv = document.getElementById('message');
    
    try {
        const response = await fetch('/api/carts', {
            method: 'POST'
        });
        
        const data = await response.json();
        messageDiv.classList.remove('d-none', 'alert-danger', 'alert-success');
        
        if (response.ok) {
            messageDiv.classList.add('alert-success');
            messageDiv.innerHTML = `
                <i class="bi bi-check-circle me-2"></i>
                Cart created successfully with ID: ${data._id}
            `;
        } else {
            messageDiv.classList.add('alert-danger');
            messageDiv.innerHTML = `
                <i class="bi bi-exclamation-triangle me-2"></i>
                Failed to create cart
            `;
        }
    } catch (error) {
        console.error('Error creating cart:', error);
        messageDiv.classList.remove('d-none', 'alert-danger', 'alert-success');
        messageDiv.classList.add('alert-danger');
        messageDiv.innerHTML = `
            <i class="bi bi-exclamation-triangle me-2"></i>
            Error creating cart. Please try again.
        `;
    }
});
</script>
</body>
</html>
